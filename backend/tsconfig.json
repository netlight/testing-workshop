{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
